<h1>Sign Up</h1>
<div class="container">
   <%= form_with scope: :post, url: users_path , local: true do |form| %>
<div class="form-group">
    <label for="name">Name:</label>
    <%= text_field 'users', 'name', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="email">Email address:</label>
    <%= text_field 'users', 'email', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <%= password_field 'users', 'password', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="pwd">Confirmation Password:</label>
    <%= password_field 'users', 'password', class:'form-control' %>
  </div>
  <br>
  <div class="col-sm-10">
    <%= submit_tag "Create", class:'btn btn-primary' %>
    <input type="reset" class="btn btn-secondary" name="Clear" value="Clear">
    </div>
  </div>
<% end %>
