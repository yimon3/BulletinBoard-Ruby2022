<div class="container">
<h1>Profile</h1>
<%= form_for @user, :url =>{:action => "updateProfile"} do |form| %>
<div class="form-group">
<label>Name</label>
<%= form.text_field :name, class:'form-control' %>
</div>
<div class="form-group">
<label>E-mail Address</label>
<%= form.text_field :email, class:'form-control' %>
</div>
<div class="form-group">
<label for="type">Type:</label><br>
<%= select 'user', 'userType', options_for_select([["Admin", "a"], ["User", "u"]]), class: 'form-control' %>
</div>
<div class="form-group">
<label>Phone</label>
<%= form.text_field :phone, class:'form-control' %>
</div>
<div class="form-group">
<label>Date of Birth</label>
<%= form.date_field :dob, class:'form-control' %>
</div>
<div class="form-group">
<label>Address</label>
<%= form.text_field :address, class:'form-control' %>
</div>
<div class="form-group">
<label>Old Profile</label>
<%= form.text_field :profile, class:'form-control' %>
</div>
<div class="form-group">
<label>New Profile</label>
<%= form.text_field :profile, class:'form-control' %>
</div><br>
<div class="col-sm-10">
    <%= submit_tag "Edit", class:'btn btn-primary' %>
    <input type="reset" class="btn btn-secondary" name="Clear" value="Clear">
    <%= link_to "Change Password", {:action => 'changePassword', :email => current_user.email }, class:"nav-item nav-link" %>
    </div>
    <% end %>
</div>