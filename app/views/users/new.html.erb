<h1>Register</h1>
<div class="container">
<%= form_tag :action => 'registerConfirm' do %>
<div class="form-group">
    <label for="name">Name:</label>
    <%= text_field 'user', 'name', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="email">Email address:</label>
    <%= text_field 'user', 'email', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <%= password_field 'user', 'password', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="pwd">Confirmation Password:</label>
    <%= password_field 'user', 'password', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="type">Type:</label><br>
       <%= select 'user', 'userType', options_for_select([["Admin", "a"], ["User", "u"]]), class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="type">Phone:</label>
    <%= text_field 'user', 'phone', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="type">Address:</label>
    <%= text_area 'users', 'address', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="type">DOB:</label>
    <%= date_field 'user', 'dob', class:'form-control' %>
  </div>
  <div class="form-group">
    <label for="type">Profile:</label>
    <%= file_field 'user', 'profile', class:'form-control' %>
  </div><br>
  <div class="col-sm-10">
    <%= submit_tag "Register", class:'btn btn-primary' %>
    <input type="reset" class="btn btn-secondary" name="Clear" value="Clear">
    </div>
  </div>
<% end %>
